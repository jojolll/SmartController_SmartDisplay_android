<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/easySettings_settingContainer"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView_checkBoxSettingsObject_icon"
        style="@style/easySettings_imageView_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:id="@+id/textView_checkboxSettingsObject_title"
        style="@style/easySettings_textView_title"
        android:layout_toEndOf="@+id/imageView_checkBoxSettingsObject_icon"
        android:layout_toStartOf="@+id/checkbox_checkboxSettingsObject"/>

    <TextView
        android:id="@+id/textView_checkboxSettingsObject_summary"
        style="@style/easySettings_textView_summary"
        android:layout_alignEnd="@+id/textView_checkboxSettingsObject_title"
        android:layout_alignStart="@+id/textView_checkboxSettingsObject_title"
        android:layout_below="@+id/textView_checkboxSettingsObject_title"/>

    <CheckBox
        android:id="@+id/checkbox_checkboxSettingsObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>