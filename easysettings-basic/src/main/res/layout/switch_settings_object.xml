<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/easySettings_settingContainer"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView_switchSettingsObject_icon"
        style="@style/easySettings_imageView_icon"/>

    <TextView
        android:id="@+id/textView_switchSettingsObject_title"
        style="@style/easySettings_textView_title"
        android:layout_toEndOf="@+id/imageView_switchSettingsObject_icon"
        android:layout_toStartOf="@+id/switch_switchSettingsObject"/>

    <TextView
        android:id="@+id/textView_switchSettingsObject_summary"
        style="@style/easySettings_textView_summary"
        android:layout_alignEnd="@+id/textView_switchSettingsObject_title"
        android:layout_alignStart="@+id/textView_switchSettingsObject_title"
        android:layout_below="@+id/textView_switchSettingsObject_title"/>

    <Switch
        android:id="@+id/switch_switchSettingsObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>